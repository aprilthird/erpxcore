@inherits DialogTemplate

<DialogTemplate @ref="DialogTemplate" Title="Title" PrimaryButtonText="@Constants.Dialog.SAVE_BUTTON_TEXT" SecondaryButtonText="@Constants.Dialog.CANCEL_BUTTON_TEXT" OnSubmitCallback="Submit">
    <MudForm @ref="Form" Model="Model">
        @ChildContent
    </MudForm>
</DialogTemplate>

@code {
    [Inject]
    ISnackbar Snackbar { get; set; }

    [Parameter]
    public object Model { get; set; }

    [Parameter]
    public EventCallback ValidSubmitCallback { get; set; }

    [Parameter]
    public EventCallback InvalidSubmitCallback { get; set; }

    private DialogTemplate DialogTemplate;
    private MudForm Form;

    private async Task Submit()
    {
        await Form.Validate();

        if (Form.IsValid)
        {
            Snackbar.Add("Submited!");
            await ValidSubmitCallback.InvokeAsync(this);
            DialogTemplate.Close();
        }
        else
        {
            Snackbar.Add("Error!");
            await InvalidSubmitCallback.InvokeAsync(this);
        }
    }

    public override void Open() => DialogTemplate.Open();

    public override void Close() => DialogTemplate.Close();
}
