@using Layout.Partials.SidebarLayout.Search
@using ERP.XCore.Hotel.Web.Client.Shared.Partials.Menus
@using ERP.XCore.Hotel.Web.Client.Shared.Partials.ThemeMode

<!--begin::Navbar-->
<div class="app-navbar flex-shrink-0">
	<!--begin::Search-->
	<div class="app-navbar-item align-items-stretch ms-1 ms-lg-3">
		<_Dropdown></_Dropdown>
	</div>
	<!--end::Search-->
	<!--begin::Activities-->
	<div class="app-navbar-item ms-1 ms-lg-3">
		<!--begin::Drawer toggle-->
		<div class="btn btn-icon btn-custom btn-icon-muted btn-active-light btn-active-color-primary w-35px h-35px w-md-40px h-md-40px" id="kt_activities_toggle">@((MarkupString)KTTheme.getSvgIcon("assets/media/icons/duotune/general/gen032.svg", "svg-icon svg-icon-1"))</div>
		<!--end::Drawer toggle-->
	</div>
	<!--end::Activities-->
	<!--begin::Notifications-->
	<div class="app-navbar-item ms-1 ms-lg-3">
		<!--begin::Menu- wrapper-->
		<div class="btn btn-icon btn-custom btn-icon-muted btn-active-light btn-active-color-primary w-35px h-35px w-md-40px h-md-40px" data-kt-menu-trigger="click" data-kt-menu-attach="parent" data-kt-menu-placement="bottom-end">@((MarkupString)KTTheme.getSvgIcon("assets/media/icons/duotune/general/gen022.svg", "svg-icon svg-icon-1"))</div>
		<_NotificationsMenu></_NotificationsMenu>
		<!--end::Menu wrapper-->
	</div>
	<!--end::Notifications-->
	<!--begin::Chat-->
	<div class="app-navbar-item ms-1 ms-lg-3">
		<!--begin::Menu wrapper-->
		<div class="btn btn-icon btn-custom btn-icon-muted btn-active-light btn-active-color-primary w-35px h-35px w-md-40px h-md-40px position-relative" id="kt_drawer_chat_toggle">@((MarkupString)KTTheme.getSvgIcon("assets/media/icons/duotune/communication/com012.svg", "svg-icon svg-icon-1")) 
		<span class="bullet bullet-dot bg-success h-6px w-6px position-absolute translate-middle top-0 start-50 animation-blink"></span></div>
		<!--end::Menu wrapper-->
	</div>
	<!--end::Chat-->
	<!--begin::Quick links-->
	<div class="app-navbar-item ms-1 ms-lg-3">
		<!--begin::Menu wrapper-->
		<div class="btn btn-icon btn-custom btn-icon-muted btn-active-light btn-active-color-primary w-35px h-35px w-md-40px h-md-40px" data-kt-menu-trigger="click" data-kt-menu-attach="parent" data-kt-menu-placement="bottom-end">@((MarkupString)KTTheme.getSvgIcon("assets/media/icons/duotune/general/gen025.svg", "svg-icon svg-icon-1"))</div>
		<_QuickLinksMenu></_QuickLinksMenu>
		<!--end::Menu wrapper-->
	</div>
	<!--end::Quick links-->
	<!--begin::Theme mode-->
	@if(KTTheme.isModeSwitchEnabled()){
	    <div class="app-navbar-item ms-1 ms-lg-3">
    		<_Main ToggleBtnClass="btn btn-icon btn-custom btn-icon-muted btn-active-light btn-active-color-primary w-35px h-35px w-md-40px h-md-40px" ToggleBtnIconClass="svg-icon svg-icon-2"></_Main>
	    </div>
    }
	<!--end::Theme mode-->
	<!--begin::User menu-->
	<div class="app-navbar-item ms-1 ms-lg-3" id="kt_header_user_menu_toggle">
		<!--begin::Menu wrapper-->
		<div class="cursor-pointer symbol symbol-35px symbol-md-40px" data-kt-menu-trigger="click" data-kt-menu-attach="parent" data-kt-menu-placement="bottom-end">
			<img src="assets/media/avatars/300-1.jpg" alt="user" />
		</div>
		<_UserAccountMenu></_UserAccountMenu>
		<!--end::Menu wrapper-->
	</div>
	<!--end::User menu-->
	<!--begin::Header menu toggle-->
	<div class="app-navbar-item d-lg-none ms-2 me-n3" title="Show header menu">
		<div class="btn btn-icon btn-active-color-primary w-35px h-35px" id="kt_app_header_menu_toggle">@((MarkupString)KTTheme.getSvgIcon("assets/media/icons/duotune/text/txt001.svg", "svg-icon svg-icon-1"))</div>
	</div>
	<!--end::Header menu toggle-->
</div>
<!--end::Navbar-->