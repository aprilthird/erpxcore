@using ERP.XCore.Entities.Models
@using ERP.XCore.Hotel.Shared.Resources.Base

<MudTextField @bind-Value="CompanyHeadquarter.Description" Label="Descripción" Variant="Variant.Outlined" />
<MudTextField @bind-Value="CompanyHeadquarter.Address" Label="Dirección" Variant="Variant.Outlined" />
<MudSelect T="Guid" @bind-Value="CompanyHeadquarter.CompanyId" Label="Empresa" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in Companies)
    {
        <MudSelectItem T="Guid" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>

@code {
    
    [Parameter]
    public CompanyHeadquarter CompanyHeadquarter { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> Companies { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> Status { get; set; }
}
