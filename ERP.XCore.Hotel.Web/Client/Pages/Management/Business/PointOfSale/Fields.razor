@using ERP.XCore.Entities.Models
@using ERP.XCore.Hotel.Shared.Resources.Base

<MudTextField @bind-Value="PointOfSale.Description" Label="Nombres" Variant="Variant.Outlined" />
<MudTextField @bind-Value="PointOfSale.TicketPrinter" Label="Impresora" Variant="Variant.Outlined" />
<MudSelect T="Guid" @bind-Value="PointOfSale.CompanyHeadquarterId" Label="Sede" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in CompanyHeadquarters)
    {
        <MudSelectItem T="Guid" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>



@code {
    
    [Parameter]
    public PointOfSale PointOfSale { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> CompanyHeadquarters { get; set; }
}
