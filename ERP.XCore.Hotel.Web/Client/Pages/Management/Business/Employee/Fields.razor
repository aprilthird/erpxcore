@using ERP.XCore.Entities.Models
@using ERP.XCore.Hotel.Shared.Resources.Base

<MudTextField @bind-Value="Employee.FirstName" Label="Nombres" Variant="Variant.Outlined" />

<MudTextField @bind-Value="Employee.LastName" Label="Apellidos" Variant="Variant.Outlined" />

<MudSelect T="Guid?" @bind-Value="Employee.DocumentTypeId" Label="Tipo Documento" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in DocumentTypes)
    {
        <MudSelectItem T="Guid?" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>

<MudTextField @bind-Value="Employee.Document" Label="Documento" Variant="Variant.Outlined" />

<MudSelect T="Guid" @bind-Value="Employee.CompanyId" Label="Empresa" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in Companies)
    {
        <MudSelectItem T="Guid" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>

<MudSelect T="Guid?" @bind-Value="Employee.WorkAreaId" Label="Area" Class="mb-3" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in WorkAreas)
    {
        <MudSelectItem T="Guid?" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>

<MudSelect T="Guid?" @bind-Value="Employee.WorkPositionId" Label="Cargo" Class="mb-3" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in WorkPositions)
    {
        <MudSelectItem T="Guid?" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>

@code {
    [Parameter]
    public Employee Employee { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> DocumentTypes { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> Companies { get; set; }
    
    [Parameter]
    public ICollection<SelectResource<Guid>> WorkAreas { get; set; }
    
    [Parameter]
    public ICollection<SelectResource<Guid>> WorkPositions { get; set; }
}