@using ERP.XCore.Entities.Models
@using ERP.XCore.Hotel.Shared.Resources.Base
<div class="row">
    <div class="col-sm-12">
        <div class="form-group">
            <label for="description">Nombres</label>
            <InputText @bind-Value="Guest.FirstName" id="description" class="form-control" placeholder="Nombres" />
            <ValidationMessage For="() => Guest.FirstName" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="form-group">
            <label for="entity">Apellidos</label>
            <InputText @bind-Value="Guest.LastName" id="entity" class="form-control" placeholder="Apellidos" />
            <ValidationMessage For="() => Guest.LastName" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="form-group">
            <label for="description">Correo</label>
            <InputText @bind-Value="Guest.Email" id="description" class="form-control" placeholder="Correo" />
            <ValidationMessage For="() => Guest.Email" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="form-group">
            <label for="entity">Teléfono</label>
            <InputText @bind-Value="Guest.PhoneNumber" id="entity" class="form-control" placeholder="Teléfono" />
            <ValidationMessage For="() => Guest.PhoneNumber" />
        </div>
    </div>
</div>
