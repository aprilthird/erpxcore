@using ERP.XCore.Entities.Models
@using ERP.XCore.Hotel.Shared.Resources.Base
<MudTextField @bind-Value="ApplicationUser.Email" Label="Email" Variant="Variant.Outlined" />
<MudTextField @bind-Value="ApplicationUser.PhoneNumber" Label="Teléfono" Variant="Variant.Outlined" />
<MudSelect T="Guid" @bind-Value="ApplicationUser.EmployeeId" Label="Empleado" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in Employees)
    {
        <MudSelectItem T="Guid" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>
<MudSelect T="Guid" @bind-Value="ApplicationUser.RoleId" Label="Rol" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in Roles)
    {
        <MudSelectItem T="Guid" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>
<MudTextField @bind-Value="ApplicationUser.Password" Label="Contraseña" Variant="Variant.Outlined" />
<MudTextField @bind-Value="ApplicationUser.PasswordConfirm" Label="Confirmar Contaseña" Variant="Variant.Outlined" />

@code {
    [Parameter]
    public ApplicationUser ApplicationUser { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> Employees { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> Roles { get; set; }
}
