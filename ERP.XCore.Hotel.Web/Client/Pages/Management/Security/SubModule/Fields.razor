@using ERP.XCore.Entities.Models
@using ERP.XCore.Hotel.Shared.Resources.Base

<MudTextField @bind-Value="SubModule.Description" Label="Descripción" Variant="Variant.Outlined" />
<MudTextField @bind-Value="SubModule.RouteUrl" Label="Ruta" Variant="Variant.Outlined" />
<MudSelect T="Guid" @bind-Value="SubModule.ModuleId" Label="Modulo" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in Modules)
    {
        <MudSelectItem T="Guid" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>
      
@code {
    [Parameter]
    public SubModule SubModule { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> Modules { get; set; }
}