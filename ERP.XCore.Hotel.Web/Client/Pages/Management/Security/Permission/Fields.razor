@using ERP.XCore.Entities.Models
@using ERP.XCore.Hotel.Shared.Resources.Base

<MudSelect T="Guid" @bind-Value="Permission.RoleId" Label="Rol" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in Roles)
    {
        <MudSelectItem T="Guid" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>
<MudSelect T="Guid" @bind-Value="Permission.SubModuleId" Label="Sub Módulo" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in SubModules)
    {
        <MudSelectItem T="Guid" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>
<MudSelect T="Guid" @bind-Value="Permission.PermissionLevelId" Label="Permiso" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in PermissionLevels)
    {
        <MudSelectItem T="Guid" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>

      
@code {
    [Parameter]
    public Permission Permission { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> Roles { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> SubModules { get; set; }
    
    [Parameter]
    public ICollection<SelectResource<Guid>> PermissionLevels { get; set; }
}