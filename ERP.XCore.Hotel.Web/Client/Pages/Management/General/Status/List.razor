@page "/maestros/generales/estado"
@using ERP.XCore.Entities.Models
@using ERP.XCore.Hotel.Shared.Helpers
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using System.Text.Json

@inject HttpClient Http
@inject Blazored.LocalStorage.ILocalStorageService localStorage

<div class="row px-5">
	<div class="d-flex justify-content-between">
		<h3>Estado</h3>

		

		@if (canEdit)
		{
		<button class="btn btn-primary" @onclick="() => ShowModalAsync(ModalType.New)">
			<i class="fa fa-add"></i>
			<span>Agregar</span>
		</button>
		}
	</div>
	<div class="col-md-12">
		<div class="table-responsive">
<MudTable Items="@StatusList" Hover="true" Breakpoint="Breakpoint.Sm" Loading="false" LoadingProgressColor="Color.Info" Filter="new Func<Status, bool>(FilterFunc1)">
				<ToolBarContent>
					<MudTextField @bind-Value="searchString1" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
				</ToolBarContent>
				<HeaderContent>
				
						<MudTh>Descripción</MudTh>
						<MudTh>Entidad</MudTh>
						<MudTh>Observación</MudTh>
						<MudTh>Acciones</MudTh>
			</HeaderContent>
			<RowTemplate>
				
							<MudTd>@context.Description</MudTd>
							<MudTd>@context.Entity</MudTd>
							<MudTd>@context.Observation</MudTd>
							<MudTd>
								<button class="btn btn-info" @onclick="() => ShowModalAsync(ModalType.Edit, context)">
									<i class="fa fa-edit"></i>
									<span>Editar</span>
								</button>
								<button class="btn btn-danger" @onclick="() => DeleteAsync(context)">
									<i class="fa fa-trash"></i>
									<span>Eliminar</span>
								</button>
							</MudTd>
			</RowTemplate>
		</MudTable>
		</div>
	</div>
</div>

<ModalForm @ref="Modal" Title="@ModalTitle" Model="Status" ValidSubmitCallback="SaveAsync" InvalidSubmitCallback="ShowError">
    <Fields @ref="Fields" Status="Status" />
</ModalForm>

@code {
	private Status Status = new Status();
	private ModalForm Modal;
	private Fields Fields;
	private string ModalTitle;
	private Status[]? StatusList;
	private string searchString1 = "";
	private string subModule = "Estado";
	private bool canEdit;

	public enum ModalType
	{
		New, Edit
	};

	protected override async Task OnInitializedAsync()
	{
		try
		{
			await LoadPermissions();
			await Load();
		}
		catch (AccessTokenNotAvailableException exception)
		{
			exception.Redirect();
		}
	}

	public async Task LoadPermissions()
	{
		var permissionsStr = await localStorage.GetItemAsync<string>("permisos");
		var permissions = JsonSerializer.Deserialize<Permission[]>(permissionsStr);
		var permission = permissions.Where(x => x.SubModule.Description == subModule).FirstOrDefault();
		canEdit = permission?.PermissionLevel.Description == "Escritura";
	}

	public async Task Load()
	{
		StatusList = await Http.GetFromJsonAsync<Status[]>(RouteConfig.Management.General.STATUS_ROUTE);
	}

	public async Task ShowModalAsync(ModalType modalType, Status status = null)
	{
		ModalTitle = $"{(modalType == ModalType.New ? "Nuevo" : "Editar")} Estado";
		Status = status ?? new Status();
		await Modal.OpenAsync();
	}

	private bool FilterFunc1(Status status) => FilterFunc(status, searchString1);

	private bool FilterFunc(Status status, string searchString)
	{
		if (string.IsNullOrWhiteSpace(searchString))
			return true;
		if (status.Description.Contains(searchString, StringComparison.OrdinalIgnoreCase))
			return true;
		if (status.Entity.Contains(searchString, StringComparison.OrdinalIgnoreCase))
			return true;
		if (!string.IsNullOrWhiteSpace(status.Observation) &&status.Observation.Contains(searchString, StringComparison.OrdinalIgnoreCase))
			return true;
		return false;
	}

	public async Task SaveAsync()
	{
		try
		{
			if(Status.Id == Guid.Empty)
			{
				await Http.PostAsJsonAsync(RouteConfig.Management.General.STATUS_ROUTE, Status);
			}
			else
			{
				await Http.PutAsJsonAsync(RouteConfig.Management.General.STATUS_ROUTE + "/" + Status.Id, Status);
			}
			await Load();
			await Modal.CloseAsync();
		}
		catch(Exception ex)
		{

		}
	}

	public void ShowError()
	{
	}

	public async Task DeleteAsync(Status status)
	{
		await Http.DeleteAsync(RouteConfig.Management.General.STATUS_ROUTE + "/" + status.Id);
		await Load();
    }
}
