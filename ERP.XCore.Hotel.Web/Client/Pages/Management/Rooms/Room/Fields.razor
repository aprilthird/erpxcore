@using ERP.XCore.Entities.Models
@using ERP.XCore.Hotel.Shared.Resources.Base

<MudTextField @bind-Value="Room.Description" Label="Descripción" Variant="Variant.Outlined" />
<MudSelect T="Guid" @bind-Value="Room.RoomTypeId" Label="Tipo de Habitación" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in RoomTypes)
    {
        <MudSelectItem T="Guid" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>
<MudSelect T="Guid" @bind-Value="Room.RoomStatusId" Label="Estado Habitación" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in RoomStatus)
    {
        <MudSelectItem T="Guid" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>
@code {
    [Parameter]
    public Room Room { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> RoomTypes { get; set; }

    [Parameter]	
    public ICollection<SelectResource<Guid>> RoomStatus { get; set; }

}