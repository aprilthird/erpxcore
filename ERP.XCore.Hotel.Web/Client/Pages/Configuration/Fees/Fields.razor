@using ERP.XCore.Entities.Models
@using ERP.XCore.Hotel.Shared.Resources.Base

<MudSelect T="Guid" @bind-Value="Fee.RoomTypeId" Label="Tipo Habitación" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in RoomTypes)
    {
        <MudSelectItem T="Guid" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>

<MudSelect T="Guid" @bind-Value="Fee.FeeTypeId" Label="Tipo Tarifa" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in FeeTypes)
    {
        <MudSelectItem T="Guid" Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>

<MudTextField @bind-Value="Fee.Amount" Label="Monto" Variant="Variant.Outlined" />

@code {
    [Parameter]
    public Fee Fee { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> RoomTypes { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> FeeTypes { get; set; }

    [Parameter]
    public ICollection<SelectResource<Guid>> Status { get; set; }
}
