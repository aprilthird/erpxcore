@page "/"
@attribute [Authorize]

<PageTitle>Index</PageTitle>

<AuthorizeView>
	<Authorized>
		<MudAlert Elevation="1" Severity="Severity.Success">
			Bienvenido, <b>@context.User.Identity?.Name</b>
		</MudAlert>
	</Authorized>
</AuthorizeView>

<MudPaper Elevation="1" Class="mt-4 pa-4">
	<MudChart ChartType="ChartType.Bar" ChartSeries="@Series" XAxisLabels="@XAxisLabels" Width="100%" Height="350px">
		<CustomGraphics>
			<style>
				.heavy {
					font: bold 30px Helvetica;
				}

				.Rrrrr {
					font: italic 40px Helvetica;
					fill: rgb(62,44,221);
				}
			</style>
			<text x="80" y="35" class="heavy">ERP</text>
			<text x="105" y="70" class="Rrrrr">XCore!</text>
		</CustomGraphics>
	</MudChart>
</MudPaper>

<MudGrid Spacing="4" Class="mt-4">
	<MudItem xs="6">
		<MudPaper Class="pa-4">
			<MudChart ChartType="ChartType.Donut" Width="300px" Height="300px" InputData="@data" InputLabels="@labels">
				<CustomGraphics>
					<text class="donut-inner-text" x="50%" y="40%" dominant-baseline="middle" text-anchor="middle" fill="black" font-family="Helvetica" font-size="2">Total</text>
					<text class="donut-inner-text" x="50%" y="55%" dominant-baseline="middle" text-anchor="middle" fill="black" font-family="Helvetica" font-size="5">@data.Sum().ToString()</text>
				</CustomGraphics>
			</MudChart>
		</MudPaper>
	</MudItem>
	<MudItem xs="6">
		<MudPaper Class="pa-4">
			<MudChart ChartType="ChartType.Pie" InputData="@data1" InputLabels="@labels1" Width="300px" Height="300px" />
		</MudPaper>
	</MudItem>
</MudGrid>

<MudPaper Spacing="4" Class="mt-4 pa-4">
	<MudChart ChartType="ChartType.Line" ChartSeries="@Series1" XAxisLabels="@XAxisLabels1" Width="100%" Height="350px"></MudChart>
</MudPaper>

